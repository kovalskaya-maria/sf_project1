{% extends 'base.html.twig' %}

{% block body %}
    {% if type is empty %}

        <div class="container mt-5">
            <div class="row">
                <div class="col">
                    <h5>Nothing was found</h5>
                </div>
            </div>
        </div>

    {% else %}

        <div class="container mt-5">
            <div class="row">
                <div class="col">
                    <h5>Existing items for {{ type.name }}</h5>
                </div>
            </div>
            <div class="row">

                <div class="col">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col">id</th>
                            <th scope="col">name</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for schedule in schedules %}
                            <tr>
                                <td>{{ type.item.id }}</td>
                                <td>{{ type.item.name }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}