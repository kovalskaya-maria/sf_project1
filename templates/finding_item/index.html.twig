{% extends 'base.html.twig' %}

{% block body %}


        <div class="container mt-5">
            <div class="row">
                <div class="col">
                    <h5>Receptions received by {{ employee.name }} for {{ date }}</h5>
                </div>
            </div>
            <div class="row">

                <div class="col">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Date</th>
                            <th scope="col">Employee</th>
                            <th scope="col">Item</th>
                            <th scope="col">Amount</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for reception in receptions %}
                            <tr>
                                <td>{{ reception.id }}</td>
                                <td>{{ reception.date|date('d-m-Y') }}</td>
                                <td>{{ reception.employee.name }}</td>
                                <td>{{ reception.item.name }}</td>
                                <td>{{ reception.amount }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

{% endblock %}